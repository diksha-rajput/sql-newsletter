{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/build/**",
      "use": "@vercel/static"
    },
    { 
        "src": "client/package.json", 
        "use": "@vercel/static-build" 
    }
    
  ],
  {
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
  }

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ]
}
